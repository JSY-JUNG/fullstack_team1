<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitc.fullstack503.team1.mapper.main.SpotMapper">
    <select id="SelectMySpotList" resultType="bitc.fullstack503.team1.dto.mysql.MySpotDTO">
        SELECT * FROM SPOT
        ORDER BY UC_SEQ ASC
        LIMIT 1, 10
    </select>
    <select id="selectDetail" resultType="bitc.fullstack503.team1.dto.mysql.MySpotDTO">
        SELECT * FROM SPOT
        WHERE UC_SEQ = #{UCSEQ}
    </select>
    <select id="selectPageSearchList" parameterType="String" resultType="bitc.fullstack503.team1.dto.mysql.MySpotDTO">
        SELECT MAIN_TITLE, MAIN_IMG_THUMB, GUGUN_NM, USAGE_AMOUNT
        FROM SPOT
        WHERE MAIN_TITLE LIKE CONCAT('%', #{Keyword}, '%')
            OR ADDR1 LIKE CONCAT('%', #{Keyword}, '%')
            OR GUGUN_NM LIKE CONCAT('%', #{Keyword}, '%')
        ORDER BY MAIN_TITLE ASC
    </select>
</mapper>